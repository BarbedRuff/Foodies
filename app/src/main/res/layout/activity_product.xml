<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Product">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/to_cart">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxHeight="375dp"
                android:src="@drawable/photo" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ico"
                android:fontFamily="@font/roboto"
                android:paddingLeft="16dp"
                android:paddingTop="24dp"
                android:text="meow meow meow"
                android:textColor="@color/black"
                android:textSize="34dp" />
            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:paddingTop="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="53dp"
                android:text="meoe"
                android:textSize="16dp"
                android:textColor="#99000000"
                android:fontFamily="@font/roboto"/>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/description"
                android:layout_marginTop="24dp"
                android:background="@color/black" />
            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_below="@+id/view"
                android:layout_height="1dp"
                android:layout_marginTop="50dp"
                android:background="@color/black"/>
            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_below="@+id/view1"
                android:layout_height="1dp"
                android:layout_marginTop="50dp"
                android:background="@color/black"/>
            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_below="@+id/view2"
                android:layout_height="1dp"
                android:layout_marginTop="50dp"
                android:background="@color/black"/>
            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_below="@+id/view3"
                android:layout_height="1dp"
                android:layout_marginTop="50dp"
                android:background="@color/black"/>
            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_below="@+id/view4"
                android:layout_height="1dp"
                android:layout_marginTop="50dp"
                android:background="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/measure"
                android:fontFamily="@font/roboto"
                android:paddingVertical="15dp"
                android:paddingLeft="16dp"
                android:text="Вес"
                android:textColor="#99000000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/measure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/roboto"
                android:paddingVertical="15dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="MEOW"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view1"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/energy"
                android:fontFamily="@font/roboto"
                android:paddingVertical="15dp"
                android:paddingLeft="16dp"
                android:text="Энерг. ценность"
                android:textColor="#99000000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/energy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view1"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/roboto"
                android:paddingVertical="15dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="MEOW"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view2"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/proteins"
                android:fontFamily="@font/roboto"
                android:paddingVertical="15dp"
                android:paddingLeft="16dp"
                android:text="Белки"
                android:textColor="#99000000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/proteins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view2"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/roboto"
                android:paddingVertical="15dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="MEOW"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view3"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/fats_per"
                android:fontFamily="@font/roboto"
                android:paddingVertical="15dp"
                android:paddingLeft="16dp"
                android:text="Жиры"
                android:textColor="#99000000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/fats_per"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view3"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/roboto"
                android:paddingVertical="15dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="MEOW"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view4"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/carbohydrates_per"
                android:fontFamily="@font/roboto"
                android:paddingVertical="15dp"
                android:paddingLeft="16dp"
                android:text="Углеводы"
                android:textColor="#99000000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/carbohydrates_per"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view4"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/roboto"
                android:paddingVertical="15dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="MEOW"
                android:textColor="@color/black"
                android:textSize="16dp" />

        </RelativeLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:paddingVertical="14dp"
        android:paddingHorizontal="12dp"
        android:background="@drawable/back_background"
        android:src="@drawable/ic_back" />

    <include
        android:id="@+id/to_cart"
        layout="@layout/incart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>