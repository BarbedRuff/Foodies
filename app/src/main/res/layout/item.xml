<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="20dp"
    android:layout_gravity="center">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/item_bg">

        <ImageView
            android:id="@+id/product_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/itsm" />

        <ImageView
            android:id="@+id/sale_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_sale" />

        <TextView
            android:id="@+id/name_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_img"
            android:layout_alignEnd="@+id/product_img"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto"
            android:maxLines="1"
            android:singleLine="true"
            android:text="name"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/measure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_product"
            android:layout_alignEnd="@+id/product_img"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/roboto"
            android:text="500 Ð³"
            android:textColor="#99000000"
            android:layout_gravity="center_horizontal"
            android:textSize="14dp" />

        <RelativeLayout
            android:id="@+id/counter"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/measure"
            android:layout_alignEnd="@+id/product_img"
            android:layout_marginHorizontal="12dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp">

        <ImageView
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/item_button_bg"
            android:padding="8dp"
            android:clickable="false"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_minus" />

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/roboto"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="8dp"
            android:clickable="false"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/item_button_bg"
            android:src="@drawable/ic_plus" />

    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/buy"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/measure"
            android:layout_alignEnd="@+id/product_img"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/item_button_bg">

            <TextView
                android:id="@+id/currentPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="12dp"
                android:fontFamily="@font/roboto"
                android:text="100"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/saleprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/SaleCurrentPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="12dp"
                    android:fontFamily="@font/roboto"
                    android:text="100"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/SaleOldPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="12dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/SaleCurrentPrice"
                    android:background="@drawable/strikethrough_shape"
                    android:fontFamily="@font/roboto"
                    android:text="100"
                    android:textColor="#99000000"
                    android:textSize="16dp"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold" />

            </RelativeLayout>


        </RelativeLayout>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buy"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"/>
    </RelativeLayout>



</RelativeLayout>